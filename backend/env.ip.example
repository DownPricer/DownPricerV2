# Configuration pour déploiement avec IP (sans domaine)
# Remplacer VOTRE_IP par l'IP réelle du VPS

DOMAIN=
MONGO_URL=mongodb://mongo:27017
DB_NAME=downpricer

# JWT Secret Key (générer avec: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=change-me-in-production

# CORS Origins (inclure l'IP du VPS)
CORS_ORIGINS=http://VOTRE_IP,http://localhost,http://127.0.0.1

# Backend Public URL (utiliser l'IP)
BACKEND_PUBLIC_URL=http://VOTRE_IP

# Environnement
ENV=production

# SMTP Configuration (pour notifications email)
SMTP_HOST=smtp.mail.ovh.net
SMTP_PORT=587
SMTP_USER=noreply@downpricer.com
SMTP_PASS=votre-mot-de-passe-smtp
SMTP_FROM=noreply@downpricer.com
SMTP_TLS_MODE=starttls

# Email notifications (peut être activé/désactivé depuis l'admin)
EMAIL_NOTIF_ENABLED=false
ADMIN_NOTIF_EMAIL=contact@downpricer.com


